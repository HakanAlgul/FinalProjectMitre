@model FinalProjectMitre.Models.MitreEntities
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}





<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/css/sb-admin-2.min.css" rel="stylesheet">
</head>
<body style="background-image:url('/Content/img/laptop.svg')">




    <div class="container">
        <div class="container align-self-md-center text-center mt-5 p-4"> @ViewBag.Mesaj</div>
        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">

                        @using (Html.BeginForm("Login", "Security", FormMethod.Post))
                        {
                            <div class="row">
                                <div class="col-lg-6 d-none d-flex p-xl-4 justify-content-center ">
                                    <img src="~/Content/img/login.jpg" />
                                </div>
                                <div class="col-lg-6">
                                    <div class="p-5">
                                        <div class="text-center">
                                            <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                                        </div>
                                        <form class="user">
                                            <div class="form-group">
                                                <input type="text" name="username" class="form-control form-control-user"
                                                       placeholder="Enter User Name...">
                                            </div>
                                            <div class="form-group">
                                                <input name="password" type="password" class="form-control form-control-user"
                                                       id="exampleInputPassword" placeholder="Password">
                                            </div>
                                            <div class="form-group">
                                                <div class="custom-control custom-checkbox small">
                                                    <input type="checkbox" class="custom-control-input" id="customCheck">
                                                    <label class="custom-control-label" for="customCheck">
                                                        Remember
                                                        Me
                                                    </label>
                                                </div>
                                            </div>
                                            <input type="submit" name="btn" value="Login" class="btn btn-primary btn-user btn-block" id="btn1" />
                                        </form>
                                        <hr>
                                        <div class="text-center">
                                            <a class="small" href="/Register/Create">Create an Account!</a>
                                        </div>
                                        <hr>
                                    </div>
                                </div>
                            </div>

                        }
                        <!-- Nested Row within Card Body -->

                    </div>
                </div>
            </div>

        </div>

    </div>
</body>
</html>

